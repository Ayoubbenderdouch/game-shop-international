# Laravel Cloud Deploy Commands
# Diese Datei wird bei jedem Deployment ausgef√ºhrt

# Install dependencies
composer install --no-dev --optimize-autoloader

# Build assets
npm install
npm run build

# Run migrations with force flag (skip if tables exist)
php artisan migrate --force || true

# Optimize Laravel
php artisan config:cache
php artisan route:cache
php artisan view:cache

# Clear old caches
php artisan cache:clear
